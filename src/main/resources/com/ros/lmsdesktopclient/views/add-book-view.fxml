<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="parentPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1000.0" stylesheets="@../styles/addBookStylesheet.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ros.lmsdesktopclient.views.AddBookController">
    <top>
        <BorderPane fx:id="headerPane" prefHeight="100.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
            <left>
                <Label fx:id="lblAddingBook" text="Adding a new book" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets left="50.0" />
                    </BorderPane.margin>
                </Label>
            </left>
        </BorderPane>
    </top>
    <center>
        <VBox fx:id="bodyPane" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="750.0" prefWidth="-Infinity" BorderPane.alignment="CENTER">
            <children>
                <BorderPane fx:id="paneISBN" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="50.0" prefWidth="1000.0">
                    <left>
                        <Label fx:id="lblISBN" text="ISBN" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets left="50.0" />
                            </BorderPane.margin>
                        </Label>
                    </left>
                    <center>
                        <TextField fx:id="tfISBN" maxWidth="-Infinity" minWidth="-Infinity" BorderPane.alignment="CENTER_RIGHT">
                            <BorderPane.margin>
                                <Insets right="600.0" />
                            </BorderPane.margin>
                        </TextField>
                    </center>
                </BorderPane>
                <BorderPane fx:id="titlePane" prefHeight="50.0" prefWidth="1000.0">
                    <left>
                        <Label fx:id="lblTitle" text="Title" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets left="50.0" />
                            </BorderPane.margin>
                        </Label>
                    </left>
                    <center>
                        <TextField fx:id="tfTitle" maxWidth="-Infinity" minWidth="-Infinity" BorderPane.alignment="CENTER_RIGHT">
                            <BorderPane.margin>
                                <Insets right="600.0" />
                            </BorderPane.margin>
                        </TextField>
                    </center>
                </BorderPane>
            <BorderPane fx:id="genrePane" prefHeight="127.0" prefWidth="958.0">
               <right>
                  <Button fx:id="btnAddGenre" mnemonicParsing="false" onAction="#addGenre" text="+" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets right="280.0" />
                     </BorderPane.margin>
                  </Button>
               </right>
               <center>
                  <TableView fx:id="tableViewGenre" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="91.0" prefWidth="298.0" BorderPane.alignment="CENTER_LEFT">
                     <columns>
                        <TableColumn fx:id="columnGenre" prefWidth="400.0" text="Genres" />
                     </columns>
                     <BorderPane.margin>
                        <Insets />
                     </BorderPane.margin>
                  </TableView>
               </center>
            </BorderPane>
                <BorderPane fx:id="authorPane" prefHeight="241.0" prefWidth="958.0">
                    <right>
                        <Button fx:id="btnAddAuthor" mnemonicParsing="false" onAction="#addAuthor" text="+" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets right="280.0" />
                            </BorderPane.margin>
                        </Button>
                    </right>
                    <center>
                        <TableView fx:id="tableViewAuthor" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="600.0" BorderPane.alignment="CENTER_LEFT">
                            <columns>
                                <TableColumn fx:id="columnFirstName" prefWidth="300.0" text="Author's First Name" />
                                <TableColumn fx:id="columnLastName" prefWidth="300.0" text="Author's Last Name" />
                            </columns>
                            <BorderPane.margin>
                                <Insets />
                            </BorderPane.margin>
                        </TableView>
                    </center>
                </BorderPane>
                <BorderPane fx:id="footerPane" prefHeight="113.0" prefWidth="958.0">
                    <left>
                        <Button fx:id="btnGoBack" mnemonicParsing="false" onAction="#goBack" text="Go Back" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets />
                            </BorderPane.margin>
                        </Button>
                    </left>
                    <right>
                        <Button fx:id="btnAddBook" mnemonicParsing="false" onAction="#addBook" text="Add Book" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets />
                            </BorderPane.margin>
                        </Button>
                    </right>
                </BorderPane>
            </children>
            <BorderPane.margin>
                <Insets top="50.0" />
            </BorderPane.margin>
        </VBox>
    </center>

</BorderPane>
